<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#27201436">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/border"
        >




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:id="@+id/textView5"
            android:layout_gravity="center" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:background="#ff3893ff"
        android:id="@+id/frameLayout"
        >


        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left|top"
            android:background="#ff3893ff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Target"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/textView1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 "
                android:id="@+id/textView2"
                android:textColor="#fff3f772"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="60dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MiliLiters"
                android:textColor="#fff3f772"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginTop="72dp"
                android:layout_marginLeft="60dp"
                android:id="@+id/textView7"
                />


        </FrameLayout>

        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right|top"
            android:background="#ff3893ff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/textView3"
                android:text="Daily Consumption"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 "
                android:id="@+id/textView4"
                android:textColor="#fedcd372"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MiliLiters"
                android:id="@+id/textView8"
                android:textColor="#fff3f772"
                android:textStyle="bold"
                android:textSize="15dp"

                android:layout_marginTop="72dp"
                android:layout_marginLeft="40dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:layout_gravity="center"></FrameLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/ADD_Water"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/border1"
        android:layout_marginTop="200dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add YourSelf"
            android:id="@+id/textView6"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="44dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:id="@+id/button"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/button"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:inputType="number"
            android:ems="10"
            android:layout_marginTop="8dp"
            android:hint="Water amount"
            android:background="#ffd2ffdb"
            android:id="@+id/editText"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="80dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cups"
                android:textSize="18dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:id="@+id/radioButton2" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bottles"
                android:textSize="18dp"
                android:id="@+id/radioButton"
                android:layout_marginLeft="40dp"


                />

        </RadioGroup>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/cup"
            android:layout_marginTop="50dp"/>

    </RelativeLayout>

</RelativeLayout>
